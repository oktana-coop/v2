{
  "name": "v2",
  "productName": "v2",
  "private": true,
  "description": "A local-first rich text editor with Git-style version control, true privacy, and complete control over your data.",
  "author": {
    "name": "Oktana Coop",
    "email": "team@oktana.dev",
    "url": "https://oktana.dev"
  },
  "version": "0.5.0",
  "type": "module",
  "main": "./dist/main/index.js",
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "app:dir": "electron-builder --dir --publish=never",
    "package": "electron-builder --publish=never",
    "package:mac": "electron-builder --mac --publish=never",
    "package:win": "electron-builder --win --publish=never",
    "package:linux": "electron-builder --linux --publish=never",
    "build": "electron-vite build --outDir=dist",
    "compile": "tsc",
    "dev": "electron-vite dev -w --outDir=dist",
    "debug": "electron-vite dev -w --outDir=dist -- --inspect=9229",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 25",
    "postinstall": "electron-builder install-app-deps",
    "prebuild": "pnpm run compile",
    "start": "electron-vite preview --outDir=dist",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "test": "jest ./src --passWithNoTests"
  },
  "build": {
    "appId": "dev.oktana.v2",
    "compression": "normal",
    "directories": {
      "output": "bin",
      "buildResources": "public"
    },
    "electronLanguages": [
      "en-US"
    ],
    "files": [
      "dist/**/*",
      "package.json",
      "!**/*.map",
      "!**/node_modules/@swc/**"
    ],
    "mac": {
      "icon": "public/macos-dock-icon.png",
      "fileAssociations": [
        {
          "ext": "v2",
          "name": "v2",
          "role": "Editor",
          "icon": "public/v2.icns"
        }
      ],
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64",
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64",
            "universal"
          ]
        }
      ],
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "public/macos-notarization/entitlements.mac.plist",
      "entitlementsInherit": "public/macos-notarization/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64",
            "ia32"
          ]
        }
      ],
      "fileAssociations": [
        {
          "ext": "v2",
          "name": "v2",
          "description": "v2 Document",
          "icon": "public/icon.ico"
        }
      ]
    },
    "linux": {
      "icon": "public/icons/icon",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "fileAssociations": [
        {
          "ext": "v2",
          "name": "v2"
        }
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "oktana-coop",
        "repo": "v2"
      }
    ],
    "nsis": {
      "perMachine": true
    }
  },
  "dependencies": {
    "@automerge/automerge": "^2.2.9",
    "@automerge/automerge-repo": "^2.0.7",
    "@automerge/automerge-repo-network-websocket": "^2.0.7",
    "@automerge/automerge-repo-react-hooks": "^2.0.7",
    "@automerge/automerge-repo-storage-indexeddb": "^2.0.7",
    "@automerge/automerge-repo-storage-nodefs": "^2.0.7",
    "@floating-ui/react": "^0.27.8",
    "@headlessui/react": "^2.2.4",
    "@oktana-coop/automerge-prosemirror": "0.0.13-13",
    "@wasmer/wasi": "^1.2.2",
    "better-sqlite3": "^11.10.0",
    "buffer": "^6.0.3",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "debounce": "^2.2.0",
    "effect": "^3.15.3",
    "electron-log": "^5.4.3",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "fast-deep-equal": "^3.1.3",
    "html2pdf.js": "^0.11.1",
    "prosemirror-commands": "^1.7.1",
    "prosemirror-history": "^1.4.1",
    "prosemirror-inputrules": "^1.5.0",
    "prosemirror-keymap": "^1.2.3",
    "prosemirror-model": "^1.25.2",
    "prosemirror-schema-list": "^1.5.1",
    "prosemirror-state": "^1.4.3",
    "prosemirror-transform": "^1.10.4",
    "prosemirror-view": "^1.40.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-resizable-panels": "^2.1.9",
    "react-router": "^7.6.0",
    "uuid": "^11.1.0",
    "vite-plugin-top-level-await": "^1.5.0",
    "vite-plugin-wasm": "^3.4.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.9.0",
    "@eslint/compat": "^1.2.9",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.27.0",
    "@storybook/addon-actions": "^8.6.14",
    "@storybook/addon-console": "^3.0.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/addon-onboarding": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/html2pdf.js": "^0.10.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.22",
    "@types/react-dom": "^18.3.7",
    "@types/wicg-file-system-access": "^2023.10.6",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitejs/plugin-react": "^4.5.0",
    "autoprefixer": "^10.4.21",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^3.1.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^0.11.6",
    "globals": "^16.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "storybook": "^8.6.14",
    "storybook-addon-remix-react-router": "^4.0.1",
    "storybook-dark-mode": "^4.0.2",
    "tailwindcss": "^3.4.17",
    "tailwind-scrollbar": "^3.1.0",
    "ts-jest": "^29.3.4",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "cbor-extract",
      "electron",
      "electron-winstaller",
      "esbuild",
      "storybook-addon-remix-react-router"
    ]
  }
}
